%h1 Listing items

%table
  %thead
    %tr
      %th Date Posted
      %th Item Name
      %th Price
      %th Description
      %th
      %th
      %th

  %tbody
    - @items.order(:created_at).each do |item|
      %tr
        %td= item.created_at
        %td= item.name
        %td= "$#{item.price}"
        %td= item.description
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
