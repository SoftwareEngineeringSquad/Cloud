= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message

  .actions
    %p
      Enter your item info:
    Name:
    = f.text_field :name
    %br
    Price:
    = f.number_field :price
    %br
    Description:
    %br
    = f.text_area :description, :value => ''
    %br
    Category:
    = f.collection_select :category_id, Category.all, :id, :name
    %br
    Location:
    = f.collection_select :location_id, Location.all, :id, :city

    = f.submit 'Save'
