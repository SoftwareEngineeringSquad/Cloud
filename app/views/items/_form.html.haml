= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message

  .actions
    %p
      Enter your item info:
    Name:
    = f.text_field :name
    %br
    Price:
    =f.number_field :price
    %br
    Description:
    %br
    =f.text_area :description, :value => ''

    = f.submit 'Save'
